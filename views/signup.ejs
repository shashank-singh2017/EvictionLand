<DOCTYPE html>
  <html lang="en-us">

  <head>
    <meta charset="UTF-8">
    <title>Login to EvictionLand</title>
    <link rel="stylesheet" href="/stylesheets/form.css">
    <script src="/javascripts/domModify.js"></script>
    <script src="/javascripts/signupValidations.js"></script>
  </head>

  <body onload=headerModification()>
    <% include header %>
      <div class="signupForm">
        <div class="textBox">
          SignUp
        </div>
        <form name="signupForm" action="/users/handleSignup" method="post" onsubmit="return validateSignupForm()">
          <div class="inputFields">
            <label class="feildName">Name: </label>
            <input class="name" name="userName" type="text" />
            <label class="error" id="userNameError"></label>
          </div>

          <div class="inputFields">
            <label class="feildName">Email:</label>
            <input class="email" name="email" type="text" />
            <label class="error" id="emailError"></label>
          </div>

          <div class="inputFields">
            <label class="feildName">Password:</label>
            <input class="password" name="password" type="password" />
            <label class="error" id="passwordError"></label>
          </div>


          <div class="inputFields">
            <label class="feildName">Phone:</label>
            <input class="phone" name="phone" type="text" />
            <label class="error" id="phoneError"></label>
          </div>

          <div class="inputFields">
            <input class="okButton" type="submit" value="Submit" />
            <input class="clearButton" type="button" onclick="clearForm()" value ="Clear"/>
          </div>

        </form>
      </div>
  </body>

  </html>