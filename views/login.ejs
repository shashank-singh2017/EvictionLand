<html lang="en-us">

  <head>
    <meta charset="UTF-8">
    <title>Login to EvictionLand</title>
    <link rel="stylesheet" href="/stylesheets/form.css">
    <script src="/javascripts/domModify.js"></script>
  </head>

  <body onload=headerModification()>
    <% include header %>
      <div class="loginForm">
        <div class="textBox">
          SignIn
        </div>
        <form action="/users/handleSignin" method="post">
          <div class="inputFields">
            <label class="feildName">Email: </label>
            <input class="email" name="email" type="email" />
          </div>

          <div class="inputFields">
            <label class="feildName">Password: </label>
            <input class="password" name="password" type="password" />
          </div>
          <br>
          <div class="inputFields">
            <input class="okButton" type="submit" value="Submit" />
            <button class="cancelButton" name="cancel">Cancel</button>
          </div>
        </form>
      </div>
  </body>

</html>